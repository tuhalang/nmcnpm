    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>*.tag</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
    </jsp-config>

    <error-page>
        <error-code>500</error-code>
        <location>/templates/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/templates/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/templates/accessdenied.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>index_</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index_</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>jsp_file</servlet-name>
        <jsp-file>/templates/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp_file</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>