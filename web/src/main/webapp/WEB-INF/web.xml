<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Tiki</display-name>
    <distributable/>
    <filter>
        <filter-name>servletFilter</filter-name>
        <filter-class>com.nmcnpm.web.security.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>servletFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ProductAPIController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.api.ProductAPIController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountAPIController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.api.AccountAPIController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.admin.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderAPIController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.api.OrderAPIController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WEB-ProductAPIController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.web.api.ProductAPIController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryAPIController</servlet-name>
        <url-pattern>/admin/api/categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductAPIController</servlet-name>
        <url-pattern>/admin/api/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountAPIController</servlet-name>
        <url-pattern>/admin/api/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/admin/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderAPIController</servlet-name>
        <url-pattern>/admin/api/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WEB-ProductAPIController</servlet-name>
        <url-pattern>/api/products</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>*.tag</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
    <error-page>
        <error-code>500</error-code>
        <location>/templates/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/templates/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/templates/accessdenied.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>CategoryAPIController</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.api.CategoryAPIController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.nmcnpm.web.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admin-product</servlet-name>
